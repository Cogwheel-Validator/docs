{
  "name": "nextra-theme-blog",
  "version": "2.13.4",
  "description": "A Nextra theme for blogs.",
  "repository": "https://github.com/shuding/nextra",
  "author": "Shu Ding <g@shud.in>",
  "license": "MIT",
  "exports": {
    "./style.css": "./style.css",
    ".": {
      "import": "./dist/index.js",
      "types": "./dist/index.d.mts"
    },
    "./cusdis": {
      "import": "./dist/cusdis.js",
      "types": "./dist/cusdis.d.mts"
    },
    "./tags": {
      "import": "./dist/tags.js",
      "types": "./dist/tags.d.mts"
    }
  },
  "types": "./dist/index.d.mts",
  "typesVersions": {
    "*": {
      "cusdis": [
        "./dist/cusdis.d.mts"
      ],
      "tags": [
        "./dist/tags.d.mts"
      ]
    }
  },
  "files": [
    "dist",
    "style.css"
  ],
  "scripts": {
    "build": "tsup",
    "build:all": "pnpm build && pnpm build:tailwind",
    "build:tailwind": "pnpm postcss src/styles.css -o style.css --verbose",
    "clean": "rimraf ./dist ./style.css",
    "dev": "concurrently \"pnpm dev:layout\" \"pnpm dev:tailwind\"",
    "dev:layout": "tsup --watch",
    "dev:tailwind": "TAILWIND_MODE=watch pnpm postcss src/styles.css -o style.css --watch",
    "prepublishOnly": "pnpm build:all",
    "test": "vitest run",
    "types": "tsup --dts-only",
    "types:check": "tsc --noEmit"
  },
  "peerDependencies": {
    "next": ">=9.5.3",
    "nextra": "workspace:*",
    "react": ">=16.13.1",
    "react-cusdis": "^2.1.3",
    "react-dom": ">=16.13.1"
  },
  "peerDependenciesMeta": {
    "react-cusdis": {
      "optional": true
    }
  },
  "dependencies": {
    "next-themes": "^0.2.1"
  },
  "devDependencies": {
    "@tailwindcss/nesting": "0.0.0-insiders.565cd3e",
    "@tailwindcss/typography": "^0.5.13",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "concurrently": "^8.2.2",
    "next": "13.5.6",
    "nextra": "workspace:*",
    "postcss": "^8.4.40",
    "postcss-cli": "^10.1.0",
    "postcss-import": "^15.1.0",
    "postcss-lightningcss": "^1.0.0",
    "react": "^18.3.1",
    "react-cusdis": "^2.1.3",
    "react-dom": "^18.3.1",
    "tailwindcss": "^3.4.7",
    "vitest": "^0.29.8"
  },
  "sideEffects": false
}
